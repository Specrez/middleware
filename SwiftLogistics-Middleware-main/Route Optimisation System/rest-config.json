{
  "apiVersion": "1.0",
  "baseUrl": "https://api.routeoptimization.cloud",
  "endpoints": {
    "calculateRoute": {
      "method": "POST",
      "path": "/v1/routes/calculate",
      "description": "Calculate optimal routes based on delivery addresses and vehicle availability"
    },
    "getVehicles": {
      "method": "GET", 
      "path": "/v1/vehicles",
      "description": "Get available vehicles for route optimization"
    },
    "updateVehicleStatus": {
      "method": "PUT",
      "path": "/v1/vehicles/{vehicleId}/status",
      "description": "Update vehicle availability status"
    }
  },
  "authentication": {
    "type": "Bearer",
    "tokenEndpoint": "/v1/auth/token"
  },
  "rateLimit": {
    "requestsPerMinute": 1000,
    "requestsPerHour": 10000
  },
  "timeout": {
    "connectionTimeout": 30000,
    "readTimeout": 60000
  }
}